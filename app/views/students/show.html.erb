<% @page_title = "QuizMe - Student Profile" %>
    
<div class="pagehead innerHeadContainer">
    <div class="width-restraint">
         <h1> <%= @student.first_name + " " + @student.last_name %>
             <span class="button-box"><%= link_to 'Remove Student', student_path(@student), :method => :delete, :class => @delete_button %></span>
             <span class="button-box"><%= link_to 'Edit Student', edit_student_path, :class => @edit_button %> </span>
             </h1>
    </div>
</div>



<div class="content-wrapper">
    
    <%= image_tag @student.image.url(:medium) %>

    <p>Description: <%= @student.description %></p>
    <p>Enrolled in: <%= @student.course.course_name %></p>

    <p><%= link_to 'Back to Students', students_path, :class => @class %>   <%= link_to 'Back to Course', course_path(@student.course) %></p>
    
</div>

