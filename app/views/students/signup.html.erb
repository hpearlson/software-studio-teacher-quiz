<div class="pagehead innerHeadContainer">
    <div class="width-restraint">
        <h1> Create an account as a student </h1>
    </div>
</div>

<div class="content-wrapper">
    <p style="color:red;">*all fields are mandatory</p>
    
    <%= form_for @student, :html => { :multipart => true } do |f| %>
    
    
    <table summary="Student form fields">
        
        <tr>
            <td><%= f.label :first_name, 'First Name' %> </th>
            <td><%= f.text_field :first_name %> </td>
        </tr>
        
        <tr>
            <td><%= f.label :last_name, 'Last Name' %> </th>
            <td><%= f.text_field :last_name %> </td>
        </tr>
        
        <tr>
            <td><%= f.label :course_id, 'Course ID (your teacher gives you this)' %> </th>
            <td> Implement this </td>
        </tr>
        
        <tr>
            <td><%= f.label :description, 'Description' %> </th>
            <td><%= f.text_area :description %> </td>
        </tr>
        
        <tr>
            <td><%= f.label :image, 'Upload Photo' %> </th>
            <td><%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg' %> </td>
        </tr>
    
        
    </table>
        
        <%= f.submit 'Create Student', :class => "button" %>
        
        <br />
        
        <p>Or, sign in using your Google account:</p>
        <p>implement this</p>
        <div class="g-signin2" data-onsuccess="onSignIn"></div>
        
        
    <% end %>

</div>