<!DOCTYPE html>
<html>
<head>
  
  <title><%= @page_title || "Quizme!" %></title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
  <% if notice %>
    <ul id="temporary_background">
  <% else %>
    <ul>
  <% end %>

  <% if session[:username] != nil %>
  
    <li><%= link_to "Students", students_path %></li>
    <li><a href="/courses">Courses</a></li>
    <!-- <li><a href="/teachers">Teacher</a></li> -->
    <% if notice %>
      <li style="float:center" id="notice"><%= notice %></li> 
    <% end %>
    <li style="float:right"><a class="active" href="/access/logout">Logout</a></li>
    <li style="float:right"> <%= link_to session[:username], Teacher.find_by(:username => session[:username]) %> </li>
  <% else %>
  
    <li><a href="/home">QuizMe!</a></li>
    <% if notice %>
      <li style="float:center" id="notice"><%= notice %></li> 
    <% end %>
    <li style="float:right"><a class="active" href="/teachers/new">Sign Up</a></li>
    <li style="float:right"><a class="active" href="/access/login">Login</a></li>
    
  <% end %>
  

</ul>
</head>
<body>
  
  <% if false %>
  <% if notice %>
    <div id="notice_wrapper">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>
  <% end %>
    

<!-- commenting this out for now -->
  <% if false %>
    <div class="container">
      <% flash.each do |key, value| %>
        <% if key != "page" %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
      <% end %>
  <% end %>

    <% if false %>
      <%= debug(params) if Rails.env.development? %>
    <% end %>

    
  <div class="content-wrapper">
    <%= yield %>
  </div>


<script>
  $(document).ready(function() {
    setTimeout(function(){

      $('#notice').fadeOut("slow"), function() {
        $(this).remove();
      };
      
    }, 2000);
  });
</script>

</body>
</html>
