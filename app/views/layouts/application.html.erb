<!DOCTYPE html>
<html>
<head>
  
  <title><%= @page_title || "Quizme!" %></title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <ul>


  <% if session[:username] != nil %>
    <li><%= link_to "Students", students_path %></li>
    <li><a href="/courses">Courses</a></li>
    <li><a href="/teachers">Teacher</a></li>
    <li style="float:right"><a class="active" href="/access/logout">Logout</a></li>
    <li style="float:right"><a class="active" href="#"><%= session[:username] %></a></li>
  <% else %>
    <li><a href="/home">QuizMe!</a></li>
    <li style="float:right"><a class="active" href="/teachers/new">Sign Up</a></li>
    <li style="float:right"><a class="active" href="/access/login">Login</a></li>
  <% end %>

</ul>
</head>
<body>
  
  <% if notice %>
    <div id="notice_wrapper">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>
    

<!-- commenting this out for now -->
  <% if false %>
    <div class="container">
      <% flash.each do |key, value| %>
        <% if key != "page" %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
      <% end %>
  <% end %>

    <% if false %>
      <%= debug(params) if Rails.env.development? %>
    <% end %>

    
    
<%= yield %>


<script>
  $(document).ready(function() {
    setTimeout(function(){
      $('#notice_wrapper').fadeOut("slow"), function() {
        $(this).remove();
      };
    }, 2000);
  });
</script>

</body>
</html>
