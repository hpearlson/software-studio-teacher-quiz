<% @page_title = "Quizme - Quiz" %>

<div class="content-wrapper stylish-forms" style="min-height: 800px">
    
    <div class="floating-profile-box" style="margin: 60px 175px 60px 175px">
        
        <div style="display:block; height: 60px;">
                    <% if flash[:correctAnswer] %>
                        <div class="alert alert-success">
                            <%= flash[:correctAnswer] %>
                        </div>
                    <% end %>
                    
                    <% if flash[:incorrectAnswer] %>
                        <div class="alert alert-danger">
                            <%= flash[:incorrectAnswer] %>
                        </div>
                    <% end %>
        </div>
        
        <div style="display:block;">
            <div class="quiz">
                
                <%= image_tag @student.image.url(:medium) %>
                                    
                
                <%= div_for(@student) do %>
                    <h1><%= @student.first_name %> <%= @student.last_name %></h1>
                    <h1><%= @student.description %></h1>
                    
                    <% if flash[:incorrectAnswer] %>
                         <span class="button-box"><%= link_to "Override: I was right", {:controller => "quizzes", :action => "overrideIncorrect"} , :class => @quiz_button, :style => "background-color: lightblue" %></span>
      
                    <% end %>
            
                    
                
                    <h1 style="text-align:center;"><%= link_to "Next", quiz_path(@teacher.id), :class => "button", :id => "next" %></h1>

                <% end %>
            </div>
        </div>
    </div>
</div>

<script>
    
    var ENTER = 13; //This is the js keycode for ENTER
    
    function my_custom_keypress(e){
      key = e.which;
      if(key == ENTER){
        $('a#next').trigger('click');
      }
    }
    
    $(document).on('keydown', my_custom_keypress);

</script>