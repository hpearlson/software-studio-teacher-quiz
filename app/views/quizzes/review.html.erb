<% @page_title = "Quizme - Quiz" %>

<div class="content-wrapper stylish-forms" style="min-height: 800px">
    
    <div class="floating-profile-box" style="margin: 60px 175px 60px 175px">
        
        <div style="display:block; height: 60px;">
                    <% if flash[:correctAnswer] %>
                        <div class="alert alert-success">
                            <%= flash[:correctAnswer] %>
                        </div>
                    <% end %>
                    
                    <% if flash[:incorrectAnswer] %>
                        <div class="alert alert-danger">
                            <%= flash[:incorrectAnswer] %>
                        </div>
                    <% end %>
        </div>
        
        <div style="display:block;">
            <div class="quiz">
                
                <%= image_tag @student.image.url(:medium) %>
                                    
                
                <%= div_for(@student) do %>
                    <h1><%= @student.first_name %> <%= @student.last_name %></h1>
                    <h1><%= @student.description %></h1>
                    

                    <h1 style="text-align:center;"><%= link_to "Next", quiz_path(@teacher.id), :class => "button", :id => "next" %></h1>

                    <% if flash[:incorrectAnswer] %>
                         <h1 style="align:center"><%= link_to "Override: I was right", {:controller => "quizzes", :action => "overrideIncorrect"} , :style => "color: lightblue" %></h1>
                    <% end %>
                    
                <% end %>
            </div>
        </div>
    </div>
</div>

<script>

$(this).on('keypress', function(event) {
    if (event.keyCode == 13) {
        document.getElementById('next').click();
    }
})
</script>