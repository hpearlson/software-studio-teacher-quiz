<% @page_title = "QuizMe! - Your Profile" %>

<div class="pagehead innerHeadContainer">
    <div class="width-restraint">
        <p> <%= session[:username] %>
            <%= link_to 'Edit Your Profile', edit_teacher_path, :class => "button" %>
            <%= link_to 'Delete Your Profile', teacher_path(@teacher), :method => :delete, :class => "button", :style => "background:red" %></p> 
    </div>
</div>



<div class="content-wrapper">
    
    <p><%= image_tag @teacher.image.url(:medium) %></p>
    <p>First Name: <%= @teacher.first_name %></p>
    <p>Last Name: <%= @teacher.last_name %></p>
    <p>Username: <%= @teacher.username %></p>
    
    
    <h2>This button will eventually go in the header.</h2>
      <% if session[:username] != nil %>
  
        <div class="dropdown btn-group">
          <button type="button" data-toggle="dropdown" id="profileoptions" aria-haspopup="true" 
            aria-expanded="true" class="btn btn-info dropdown-toggle"><%= session[:username] %>
            <span class="caret"></span></button>
            
          <ul class="dropdown-menu" aria-labelledby="profileoptions">
            <li> <%= link_to "Your profile", Teacher.find_by(:username => session[:username]) %> </li>
            <!-- <li role="separator" class="divider"></li> -->
            <li> <a href='#'>Settings</a>  </li>
          </ul>
        </div>
  
      <% end %>

    
</div>

