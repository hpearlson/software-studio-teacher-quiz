<% @page_title = "QuizMe - Your Profile" %>

<div class="pagehead innerHeadContainer">
    <div class="width-restraint">
        <h1> <%= session[:username] %>
            <span class="button-box"><%= link_to 'Delete Your Profile', teacher_path(@teacher), :method => :delete, :class => "button", :style => "background:red" %></span>
            <span class="button-box"><%= link_to 'Edit Your Profile', edit_teacher_path, :class => "button", :style => "background:tan" %></span>
            </h1> 
    </div>
</div>



<div class="content-wrapper">
    
    <p><%= image_tag @teacher.image.url(:medium) %></p>
    <p>First Name: <%= @teacher.first_name %></p>
    <p>Last Name: <%= @teacher.last_name %></p>
    <p>Username: <%= @teacher.username %></p>
    
</div>
