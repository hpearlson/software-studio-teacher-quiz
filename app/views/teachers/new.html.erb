<script src="https://apis.google.com/js/platform.js" async defer></script>
<meta name="google-signin-client_id" content="21476288076-p1804q3mrjbuc85gvmm94ekk1jn0ius1.apps.googleusercontent.com">

<% @page_title = "Register for a teacher account" %>


<div class="login-body">
    <div class="overlay-container">
        <div class="content-wrapper">
            <div class="teacher-registration stylish-forms">
                
                <h1> Create an account as a teacher </h1>
                
                <% session[:new_user_type] = "teacher" %>



                <%= form_for @teacher, :html => { :multipart => true } do |f| %>
                
                
                    <p>Username</p>
                    <%= f.text_field :username %>
                    
                    <p>Password</p>
                    <%= f.password_field :password %>
                    
                    <p>Confirm Password</p>
                    <%= f.password_field :password_confirmation %>
                    
                    <p>Email address</p>
                    <%= f.text_field :email_address %>
                    
                    <%= f.text_field :first_name, :class => "hidden", :value => "Jane" %> 
                    <%= f.text_field :last_name, :class => "hidden", :value => "Doe" %>
                    
                    <p style="color:yellow;">*all fields are mandatory</p>
                    
                    <%= f.submit 'Create Teacher', :class => "button" %>
                    
                    <br />
                    
                    <button class="loginBtn loginBtn--google">
                      <%= link_to "Or sign up with Google", "/auth/google_oauth2", id: "sign_in", style: "color:white" %>
                    </button>

                    
                    
                <% end %>

            
            </div>
        </div>
    </div>
    


</div>